class Driver{
  private boolean sleepy;
  public Driver( boolean sleepy){
    this.sleepy =sleepy;
  }
  public void drive(){
    System.out.println("sleep");
  }
  public void park(){
    System.out.println("Park");
  }
}



Driver driver = new Driver(true);

if (driver.sleepy) {
  driver.park();
} else {
  driver.drive();
}


